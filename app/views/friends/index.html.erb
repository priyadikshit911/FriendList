<p id="notice"><%= notice %></p>

<h1>Friends</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"><center>Action</center></th>
    </tr>
  </thead>

  <tbody class=" table-striped ">
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><button class="btn success"><%= link_to 'Show', friend, class:"btn btn-success" %></button></td>
        <td><button class="btn warning"><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-warning" %></button></td>
        <td><button class="btn danger"><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"%></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Friend', new_friend_path, class: "btn btn-dark" %>
